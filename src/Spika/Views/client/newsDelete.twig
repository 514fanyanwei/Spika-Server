{% extends "client/adminBase.twig" %}

{% block content %}


            <div class="row">
                <div class="col-lg-12" style="margin-top:30px">
                    <div class="alert alert-danger">
                        <strong>{{lang.messageConfirmDeleteStory}}</strong>
                    </div>
                </div>
            </div>
             
            <div class="row">
                <div class="col-lg-8">
                    
                    {% include "client/alerts.twig" %}
                    
                        <form role="form" method="post" action="{{ROOT_URL}}/client/news/delete/{{id}}" enctype="multipart/form-data">
                        
                        <div class="form-group">
                            <label>{{lang.formStoryTitle}}</label>                           
                                <div class="well">{{formValues.title}}</div>
                        </div>
                        
                        <div class="form-group">
                            <label>{{lang.formStoryUrl}}</label>                           
                                <div class="well">{{formValues.story_url}}</div>
                        </div>

                        <div class="form-group">
                            <label>{{lang.formStoryContent}}</label>
                            <div class="well">{{formValues.content}}</div>
                        </div>
   
                        <input type="submit" name="submit_cancel" class="btn btn-success btn-lg btn-block" value="{{lang.btnCancel}}" />
                        <input type="submit" name="submit_delete" class="btn btn-danger btn-lg btn-block" value="{{lang.btnDelete}}" />

                    </form>
                    
                </div>
                
                <div id="chatWindow" class="col-lg-4">
                    
                </div>
                
            </div>
             
</script>
       
{% endblock %}
