{% extends "admin/adminBase.twig" %}

{% block content %}

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{lang.labelDashboard}}</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div id="morris-area-chart"><i class="fa fa-bar-chart-o fa-fw"></i> {{lang.labelDashboardStatistics}}</div>
                        </div>

                        <div class="panel-body">
                            <table class="table table-striped table-bordered table-hover">
                                <tbody>
                                    <tr>
                                        <td>{{lang.labelDashboardTotalUsers}}</td>
                                        <td>{{countUsers}}</td>
                                    </tr>
                                    <tr>
                                        <td>{{lang.labelDashboardTotalMessages}}</td>
                                        <td>{{countMessages}}</td>
                                    </tr>
                                    <tr>
                                        <td>{{lang.labelDashboardActiveUsers}}</td>
                                        <td>{{countLastLoginedUsers}}</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>

                <div id="chatWindow" class="col-lg-4">
                    
                </div>
                
            </div>
            <!-- /.row -->
            
{% endblock %}
